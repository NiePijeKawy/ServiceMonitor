@using ServiceMonitor.Models.Performer
@model PerformerEditViewModel

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<h2 class="title" style="text-align:center">Zmiana statusu pracy geodezyjnej</h2>
<div class="container" style="margin-top:5%">
    <div class="col-xs-12">
        <p>Usługi</p>
        <p>@Model.ServiceName</p>

        @*<p>Aktualny status</p>
        <p>@Model.CurentStatus</p>*@

        <div class="form-group">
            @Html.LabelFor(x => x.CurentStatus, "Aktualny status usługi", new { style = "font-weight: bold;" })
            @Html.TextBoxFor(x => x.CurentStatus, new { @class = "form-control transparent" })
        </div>
        @using (Html.BeginForm("Edit"))
        {
           
           <div class="form-group">
               @Html.LabelFor(x => x.UntilWhen, "Data zmiany statusu", new { style = "font-weight: bold;" })
               @Html.EditorFor(x => x.UntilWhen, new { @class = "form-control transparent", })
           </div>
           <div class="form-group">
               @Html.LabelFor(x => x.IdNewStatus, "Nowy status usługi", new { style = "font-weight: bold;" })
               @Html.DropDownListFor(x => x.IdNewStatus, new SelectList(Model.WorksState, "Id", "DisplayName"), "Wybierz nowy etap", new { @class = "form-control transparent"})
           </div>
           <div class="form-group">
               @Html.LabelFor(x => x.Description, "Opis (opcjonalny)", new { style = "font-weight: bold;" })
               @Html.TextBoxFor(x => x.Description, new { @class = "form-control transparent" })
           </div>

            <button type="submit" class="btn transparent float-left">Zapisz</button>
            <button class="btn transparent float-left">@Html.ActionLink("Anuluj", "WorkList2", "Performer", new { style = "color:black" })</button>
        }

    </div>
</div>


